@model VidlyStore.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre : @Model.genre.GenreName</li>
    <li>Release Date : @Model.ReleasedDate.ToLongDateString()</li>
    <li>Date Added : @Model.CreatedOn.ToLongDateString()</li>
    <li>Number in Stock : @Model.NoinStock</li>
</ul>

